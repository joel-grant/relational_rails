<%= link_to "Dojos Index", "/dojos" %> | 
<%= link_to "Instructors Index", "/instructors" %> |
<%= link_to "Alphabetize Instructors", "/dojos/#{@dojo.id}/instructors?order=alphabetize" %>
<p><%= form_with url: "/dojos/#{@dojo.id}/instructors", method: :get, local: true do |form| %>
  <%= form.label :experience %>
  <%= form.text_field :experience %>
  <%= form.submit "Return Records" %>
<% end %> </p>

<% @instructors.each do |instructor| %>
  <h1><%= instructor.name %></h1>
  <h3>Instructor ID: <%= instructor.id %></h3>
  <h3>On Payroll? <%= instructor.payroll %></h3>
  <h3>Years of Experience: <%= instructor.experience %></h3>
  <%= link_to "Update #{instructor.name}", "/instructors/#{instructor.id}/edit" %> |
  <%= link_to "Delete #{instructor.name}", "/instructors/#{instructor.id}", method: :delete %> | 

<% end %>
<%= link_to "Create Instructor", "/dojos/#{@dojo.id}/instructors/new" %>
